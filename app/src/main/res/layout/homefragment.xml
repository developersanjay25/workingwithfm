<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select image"
        android:id="@+id/select_image"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/select_image"
        android:id="@+id/Show_name"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/Show_name"
        android:layout_marginTop="30dp"
        android:id="@+id/home_image"
        android:src="@color/white"
        />
    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/progress_bar"
        android:layout_below="@+id/home_image"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_image"
        android:id="@+id/upload_home_img"
        android:text="upload"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Show_name"
        android:layout_centerHorizontal="true"
        android:id="@+id/settofire"
        android:text="Name_upload"
        />

</RelativeLayout>